    <script>
  function confirmSubmission(id, condition) {
    Swal.fire({
        title: 'Are you sure?',
        text: `${condition === 0 ? 'Are you sure to Block this Product?' : 'Are you sure to Unblock this Product?'}`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, submit it!',
        confirmButtonColor:"#2e8b57",
        cancelButtonText: 'Cancel'
    }).then((result) => {
        if (result.isConfirmed) {
           
            if(condition === 0 ) {
                window.location.href = `/admin/blockProduct?id=${id}`;

            }else
            window.location.href = `/admin/unblockProduct?id=${id}`;
        }
    });
}

    </script>
