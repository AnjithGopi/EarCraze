                    <table class="table" id="example">
                        <thead>
                            <tr>
                                <th scope="col" class="col-check">
                                    <div class="form-check">
                                        <!-- <input class="form-check-input" type="checkbox"> -->
                                    </div>
                                </th>
                                <th scope="col" class="col-name">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;PRODUCT</th>
                                <th scope="col" class="col-price">PRICE</th>
                                <th scope="col" class="col-price">&nbsp;QUANTITY</th>
                                <th scope="col" class="col-status">&nbsp;STATUS</th>
                                <th scope="col" class="col-date">&nbsp;&nbsp;&nbsp;DATE</th>
                                <th scope="col" class="col-action text-end">ACTION&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (product) { %>
                                <% for (let i = 0; i < product.length; i++) { %>
                                    <tr>
                                        <td class="col-check">
                                            <div class="form-check">
                                                <!-- <input class="form-check-input" type="checkbox"> -->
                                            </div>
                                        </td>
                                        <td class="col-name">
                                            <a class="itemside" href="#">
                                                <div class="left">
                                                    <img src="/uploads/<%= product[i].image[0] %>"  style="max-width: 50px; max-height: 50px;" alt="Product">
                                                </div>
                                                <div class="info">
                                                    <h6 class="mb-0"><%= product[i].title %></h6>
                                                </div>
                                            </a>
                                        </td>
                                        <td class="col-price">
                                            <span style="color: rgb(0, 0, 0); font-weight: bold;">â‚¹ <%= product[i].salesprice %></span>
                                        </td>
                                        <td class="col-price">
                                            <span style="color: rgb(204, 4, 4); font-weight: bold;">&nbsp; <%= product[i].quantity %></span>
                                        </td>
                                        <td class="col-status">
                                            <% if (product[i].is_active === 0) { %>
                                                <span class="badge rounded-pill alert-success">Active</span>
                                            <% } else { %>
                                                <span class="badge rounded-pill alert-danger">Blocked</span>
                                            <% } %>
                                        </td>
                                        <td class="col-date">
                                            <% function formatDate(dateString) {
                                                const date = new Date(dateString);
                                                const day = date.getDate().toString().padStart(2, '0');
                                                const month = (date.getMonth() + 1).toString().padStart(2, '0'); // Months are zero-based
                                                const year = date.getFullYear();
                                                return `${day}/${month}/${year}`;
                                            } %>
                                            <span class="fs-0" style="color: rgb(0, 0, 0); font-weight: bold;"><%= formatDate(product[i].date) %></span>
                                        </td>
                                        <td class="col-action text-end">
                                            <a href="/admin/editProduct?id=<%= product[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                                <i class="material-icons md-edit"></i> Edit
                                            </a>
                                            <% if (product[i].is_active === 0) { %>
                                                <a onclick="confirmSubmission('<%= product[i]._id %>',0)" class="btn btn-sm font-sm btn-light rounded">
                                                    <i class="material-icons md-delete_forever"></i> Block
                                                </a>
                                            <% } else { %>
