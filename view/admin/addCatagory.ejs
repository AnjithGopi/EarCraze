    <script>
        function confirmSubmission(id, condition) {
          Swal.fire({
              title: 'Are you sure?',
              text: `${condition === 0 ? 'Are you sure to Block this Category' : 'Are you sure to Unblock this Category'}`,
              icon: 'warning',
              showCancelButton: true,
              confirmButtonText: 'Confirm',
              confirmButtonColor:"#2e8b57",
              cancelButtonText: 'Cancel'
          }).then((result) => {
              if (result.isConfirmed) {
                  // If the user clicks "Yes, submit it!", you can add your logic here
                  // For example, submit a form or navigate to a new location
                  // document.getElementById(`myForm_${id}`).submit();
                  // location.load(`/admin/unblockProduct?id=${id}`)
                  if(condition === 0 ) {
                      window.location.href = `/admin/blockCategory?id=${id}`;
      
                  }else
                  window.location.href = `/admin/unblockcategory?id=${id}`;
              }
          });
      }
      
