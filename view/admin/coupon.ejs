<!-- Include Axios library for making HTTP requests -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const couponForm = document.getElementById('couponForm');

        couponForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(couponForm);
            try {
                const name = formData.get('name').trim();
                const code = formData.get('code').trim();
                const discountpercentage = parseInt(formData.get('discountpercentage'));
                const minimumAmount = parseInt(formData.get('minimumAmount'));
                const validUntil = new Date(formData.get('validUntil'));

                let isValid = true;

                if (!/^[A-Za-z0-9]+$/.test(name)) {
                    document.getElementById('couponNameError').textContent = 'Invalid name format.';
                    isValid = false;
                } else {
                    document.getElementById('couponNameError').textContent = '';
                }

                if (!/^[A-Za-z0-9]+$/.test(code)) {
                    document.getElementById('couponCodeError').textContent = 'Invalid code format.';
                    isValid = false;
                } else {
                    document.getElementById('couponCodeError').textContent = '';
                }

                if (discountpercentage < 0 || discountpercentage > 100 || isNaN(discountpercentage)) {
                    document.getElementById('discountError').textContent = 'Discount percentage must be between 0 and 100.';
                    isValid = false;
                } else {
                    document.getElementById('discountError').textContent = '';
                }

                if (minimumAmount <= 0 || isNaN(minimumAmount)) {
                    document.getElementById('minAmountError').textContent = 'Minimum purchase amount must be positive.';
                    isValid = false;
                } else {
                    document.getElementById('minAmountError').textContent = '';
                }

                const currentDate = new Date();
                if (validUntil < currentDate) {
                    document.getElementById('validUntilError').textContent = 'Valid until date cannot be in the past.';
                    isValid = false;
                } else {
                    document.getElementById('validUntilError').textContent = '';
                }

                if (isValid) {
                    // Make an AJAX request to submit the form data
                    await axios.post('/admin/createCoupon', Object.fromEntries(formData));
                   
                    
                    // alert('Coupon created successfully!');



                    Swal.fire({
                     position: "center",
                      icon: "success",
                       title: "Coupon Created Successfully",
                       showConfirmButton: false,
                        timer: 1500
                        });
                   

                    couponForm.reset();

                    setTimeout(()=>{
                        window.location.reload()

                    },1000)
                    
                }
            } catch (error) {
                console.error(error);
                // alert('Coupon Already Exists');
                Swal.fire({
  icon: "error",
  
  text: "Coupon Already Exists",
  
});
            }
        });
    });
</script>
    
