    <script>
        function confirmSubmission(id, condition) {
            console.log(id);
          Swal.fire({
              title: 'Are you sure?',
              text: `${condition === 0 ? 'Are you sure to Block this Brand?' : 'Are you sure to Unblock this Brand?'}`,
              icon: 'warning',
              showCancelButton: true,
              confirmButtonText: 'Yes,Confirm!',
              confirmButtonColor:"#2e8b57",
              cancelButtonText: 'Cancel'
          }).then((result) => {
              if (result.isConfirmed) {
                 
                  if(condition === 0 ) {
                      window.location.href = `/admin/blockBrand?id=${id}`;
      
                  }else
                  window.location.href = `/admin/unblockBrand?id=${id}`;
              }
          });
      }
      
