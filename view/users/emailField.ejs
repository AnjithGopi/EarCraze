<body class=" "  >
    <div style="height: 100vh; margin: 0;" class="d-flex justify-content-center align-items-center">

    <div class="card text-center "  style="width: 400px; height: 280px;">
        <div class="card-header h5 text-white bg-success">Password Reset</div>
        <div class="card-body px-5">
          
            
            <form action="/forgotPassword" method="post">
                <p class="card-text py-2">
                    Enter your email address and we'll send  an OTP to reset your Password.
                </p>
                <% if(locals.message){%>
                    <span class="text-danger"><%=message%></span>
        
                   <%}%>
                <div class="form-outline">
                    <input type="email" placeholder="Enter your Email" id="typeEmail" class="form-control my-3" pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$" required title="Please Check your Email Address" name="email" />
                 
                </div>
               
                
                <input type="submit"  value="Send OTP" class="btn btn-success w-50">
                

            </form>
           
          
        </div>
    </div>

</div>
    
</body>
